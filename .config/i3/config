bindsym $mod+Shift+x exec "i3lock -c 808080"
bindsym $mod+Shift+s exec "i3lock -c 808080 && systemctl suspend"

bindsym --release $mod+Shift+p exec "qvm-pause --all"; exec qvm-xkill
bindsym $mod+Shift+u exec "qvm-unpause --all"

# set lower brightness than fn keys allow
bindsym $mod+Shift+d exec "echo 20 | sudo tee /sys/class/backlight/intel_backlight/brightness"

# why can't i assign class="dom0" here
assign [class="KeePassXC"] 10
assign [class="music-vault"] 9
